<?xml version="1.0" encoding="utf-8"?>
<navigation
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/FirstFragment">

    <fragment
        android:id="@+id/FirstFragment"
        android:name="com.cheng.transactionterminal.ui.FirstFragment"
        android:label="@string/first_fragment_label"
        tools:layout="@layout/fragment_first">

        <action
            android:id="@+id/action_to_card_entry_fragment"
            app:destination="@id/CardEntryFragment" />
    </fragment>
    <fragment
        android:id="@+id/CardEntryFragment"
        android:name="com.cheng.transactionterminal.ui.CardEntryFragment"
        android:label="@string/second_fragment_label"
        tools:layout="@layout/fragment_card_entry">

        <action
            android:id="@+id/action_to_first_fragment"
            app:destination="@id/FirstFragment" />
    </fragment>
</navigation>
